<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HehelifeProject.Views.AddPage"
             Title="Een nieuwe Auto toevoegen">
    <VerticalStackLayout Padding="20" Spacing="15">
        <!-- Titel -->
        <Label Text="Voeg een nieuwe auto toe"
               FontFamily="TahomaBold"
               FontSize="Large"
               TextColor="#FFD700"
               HorizontalOptions="Center" />

        <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto"
              ColumnDefinitions="Auto, *"
              ColumnSpacing="10"
              RowSpacing="10">
            <!-- Merk -->
            <Label Text="Merk:"
                   FontFamily="Tahoma"
                   FontSize="14"
                   TextColor="White"
                   VerticalTextAlignment="Center"
                   Grid.Row="0" Grid.Column="0" />
            <Entry Placeholder="Bijv. Ford"
                   Text="{Binding Brand}"
                   FontFamily="Tahoma"
                   FontSize="14"
                   BackgroundColor="#444444"
                   TextColor="White"
                   Grid.Row="0" Grid.Column="1" />

            <!-- Model -->
            <Label Text="Model:"
                   FontFamily="Tahoma"
                   FontSize="14"
                   TextColor="White"
                   VerticalTextAlignment="Center"
                   Grid.Row="1" Grid.Column="0" />
            <Entry Placeholder="Bijv. Mustang"
                   Text="{Binding Model}"
                   FontFamily="Tahoma"
                   FontSize="14"
                   BackgroundColor="#444444"
                   TextColor="White"
                   Grid.Row="1" Grid.Column="1" />

            <!-- Jaar -->
            <Label Text="Jaar:"
                   FontFamily="Tahoma"
                   FontSize="14"
                   TextColor="White"
                   VerticalTextAlignment="Center"
                   Grid.Row="2" Grid.Column="0" />
            <Entry Placeholder="Bijv. 2022"
                   Text="{Binding Year}"
                   FontFamily="Tahoma"
                   FontSize="14"
                   BackgroundColor="#444444"
                   TextColor="White"
                   Keyboard="Numeric"
                   Grid.Row="2" Grid.Column="1" />

            <!-- Prijs -->
            <Label Text="Prijs (â‚¬):"
                   FontFamily="Tahoma"
                   FontSize="14"
                   TextColor="White"
                   VerticalTextAlignment="Center"
                   Grid.Row="3" Grid.Column="0" />
            <Entry Placeholder="Bijv. 25000"
                   Text="{Binding Price}"
                   FontFamily="Tahoma"
                   FontSize="14"
                   BackgroundColor="#444444"
                   TextColor="White"
                   Keyboard="Numeric"
                   Grid.Row="3" Grid.Column="1" />

            
            
            <!-- Kilometerstand -->
            <Label Text="Kilometerstand (km):"
                   FontFamily="Tahoma"
                   FontSize="14"
                   TextColor="White"
                   VerticalTextAlignment="Center"
                   Grid.Row="5" Grid.Column="0" />
            <Entry Placeholder="Bijv. 120000"
                   Text="{Binding Mileage}"
                   FontFamily="Tahoma"
                   FontSize="14"
                   BackgroundColor="#444444"
                   TextColor="White"
                   Keyboard="Numeric"
                   Grid.Row="5" Grid.Column="1" />

            <!-- Afbeelding URL -->
            <Label Text="Afbeelding URL:"
                   FontFamily="Tahoma"
                   FontSize="14"
                   TextColor="White"
                   VerticalTextAlignment="Center"
                   Grid.Row="6" Grid.Column="0" />
            <Entry Placeholder="Bijv. https://..."
                   Text="{Binding ImageUrl}"
                   FontFamily="Tahoma"
                   FontSize="14"
                   BackgroundColor="#444444"
                   TextColor="White"
                   Grid.Row="6" Grid.Column="1" />
        </Grid>

        <!-- Afbeeldingsvoorbeeld -->
        <Image Source="{Binding ImageUrl}"
               WidthRequest="200"
               HeightRequest="150"
               Aspect="AspectFit"
               BackgroundColor="Black"
               Margin="0,20,0,10" />

        <!-- Knoppen -->
        <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
            <Button Text="Wissen"
                    Command="{Binding ClearCommand}"
                    BackgroundColor="#555555"
                    TextColor="White"
                    WidthRequest="120" />
            <Button Text="Toevoegen"
                    Command="{Binding AddCommand}"
                    BackgroundColor="#FFD700"
                    TextColor="Black"
                    WidthRequest="120" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>